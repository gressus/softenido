<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <WebView android:id="@+id/web_view"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1">
    </WebView>
    <LinearLayout android:id="@+id/web_buttons_layout"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:background="@android:color/darker_gray"
                  android:layout_height="wrap_content">
        <ImageButton android:id="@+id/web_back"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/ic_navigation_back_blue"/>
        <ImageButton android:id="@+id/web_forward"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/ic_navigation_forward_blue"/>
        <ImageButton android:id="@+id/web_home"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/ic_home_blue"/>
        <EditText android:id="@+id/web_search_edit"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:hint="type text"/>
        <ImageButton android:id="@+id/web_search_go"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/ic_search_blue"/>
    </LinearLayout>
</LinearLayout>

