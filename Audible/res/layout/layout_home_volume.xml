<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/seekbar_view"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight="1">
        <SeekBar android:id="@+id/seekbar_view_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="50"
                android:max="100"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"/>
        <TextView android:id="@+id/seekbar_view_text"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:typeface="normal"
                  android:text="0.00%"
                  android:textSize="14dp"
                  android:textStyle="bold"
                  android:layout_marginLeft="6dp"
                  android:gravity="center_vertical"
                  android:layout_weight="1"/>
    </LinearLayout>
    <Button android:id="@+id/seekbar_view_sub"
            android:drawableLeft="@drawable/ic_volume_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button android:id="@+id/seekbar_view_add"
            android:drawableLeft="@drawable/ic_volume_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>
